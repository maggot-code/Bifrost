{
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "preserve",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "allowJs": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noUnusedParameters": true,
        "strictFunctionTypes": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "typeRoots": [
            "./node_modules/@types/",
            "./typings"
        ],
        "paths": {
            "#/*": [
                "typings/*"
            ],
            "@pkg/*": [
                "packages/*"
            ],
            "@/*": [
                "src/*"
            ],
            "@ps/*": [
                "src/plugins/*"
            ]
        }
    },
    "include": [
        "vite.config.ts",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.vue",
        "packages/**/*.ts",
        "packages/**/*.d.ts",
        "packages/**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ]
}