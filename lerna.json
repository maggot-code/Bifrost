{
    "version": "independent",
    "npmClient": "npm",
    "command": {
        "publish": {
            "ignoreChanges": [
                "ignored-file",
                "*.md"
            ]
        },
        "bootstrap": {
            "ignore": "component-*",
            "npmClientArgs": [
                "--no-package-lock"
            ]
        }
    },
    "packages": [
        "packages/*"
    ]
}